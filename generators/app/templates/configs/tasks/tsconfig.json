{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./app/out-tsc",
		"baseUrl": "src",
		"sourceMap": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2016",
			"es2017",
			"dom"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": []
	},
	"exclude": [
		"node_modules",
		"app",
		"test.ts",
		"**/*.spec.ts"
	]
}