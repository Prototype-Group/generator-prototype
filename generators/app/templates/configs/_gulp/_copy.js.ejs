'use strict';

const config = require('../config');
const path = config.options.paths;
const gulp = require('gulp');
<% if (gulpModules && gulpModules.indexOf('gulp-requirejs-optimize') == -1 || gulpModules && gulpModules.indexOf('browserify') == -1) { %>
// Copy js files
gulp.task('copy:js', function (cb) {
	return gulp.src(path.src + '/shared/scripts/*.js')
		.pipe(gulp.dest(path.dev + '/js'));
});<% } %>

// Copy ajax files
gulp.task('copy:ajax', function (cb) {
	return gulp.src(path.src + '/ajax/**/*')
		.pipe(gulp.dest(path.dev + '/ajax'));
});

// Copy assets files
gulp.task('copy:assets', function (cb) {
	return gulp.src(path.src + '/assets/**/*')
		.pipe(gulp.dest(path.dev + '/'));
});
<% if (features && features.indexOf('createDevFolder') != -1) { %>
// Copy dev files to dist
gulp.task('copy:dist', function (cb) {
	return gulp.src(path.dev + '/**/*')
		.pipe(gulp.dest(path.dist + '/'));
});<% } %>