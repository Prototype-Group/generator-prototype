gulp.task('clean:dist', function (cb) {
	del([
		path.dist + '**/*'
	], cb);
	console.log('deleted files in ', path.dist);
});<% } %>
<% if (gruntModules && gruntModules.indexOf('grunt-image-size-export') != -1) { %>
