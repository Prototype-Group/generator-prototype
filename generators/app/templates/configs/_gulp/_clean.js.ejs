gulp.task('clean:pictures', function (cb) {
	var imgPath = path.src + '/assets/img/temp/pictures/**/*.jpg';

	del([imgPath], cb);
	console.log('deleted picture files in ', imgPath);
});<% } %>
<% if (gruntModules && gruntModules.indexOf('grunt-grunticon') != -1) { %>
