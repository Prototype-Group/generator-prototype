/* ===================================================
VEAMS SETTINGS
=================================================== */
// $min-width defines the general behaviour of the bp mixin and
// handles the project as mobile-first project when set to `true`
$min-width: true;
<% if (cssLibs && cssLibs.length > 0 && cssLibs.indexOf('neat') != -1) { %>
/* ===================================================
BOURBON NEAT SETTINGS
=================================================== */
$neat-grid: (
	columns: 12,
	gutter: 2%
);

$max-width: calc(1404px + 4%) !default;
<% }  %>
/* ===================================================
BREAKPOINT SETTINGS
=================================================== */
// Breakpoints
$bp-mobile-s: 0;
$bp-mobile-p: 480px;
$bp-mobile-l: 600px;
$bp-mobile-xl: 657px;
$bp-tablet-p: 768px;
$bp-tablet-l: 1024px;
$bp-desktop-m: 1230px;
$bp-desktop-l: 1404px;
<% if (cssLibs && cssLibs.length > 0 && cssLibs.indexOf('foundation-sites') != -1) { %>
/* ===================================================
FOUNDATION SETTINGS
=================================================== */
// The settings can be found here:
// ~foundation-sites/scss/settings/_settings.scss
// Just copy and paste the things you need
$breakpoints: (
	small: 0,
	medium: 640px,
	large: 1024px,
	xlarge: 1200px,
	xxlarge: 1440px
);<% } else { %>
// BREAKPOINTS MAP
// If you want to work with the desktop-first approach
// turn the values upside down and set $min-width to false
$breakpoints: (
	'mobile-s': $bp-mobile-s,
	'mobile-p': $bp-mobile-p,
	'mobile-l': $bp-mobile-l,
	'mobile-xl': $bp-mobile-xl,
	'tablet-p': $bp-tablet-p,
	'tablet-l': $bp-tablet-l,
	'desktop-m': $bp-desktop-m,
	'desktop-l': $bp-desktop-l
);<% } %> <% if (cssLibs && cssLibs.length > 0 && cssLibs.indexOf('bootstrap-sass') != -1) { %>
/* ===================================================
BOOTSTRAP SETTINGS
=================================================== */
// The settings can be found here:
// ~bootstrap-sass/assets/stylesheets/bootstrap/_variables.scss
// Just copy and paste the things you need<% } %>
<% if (cssLibs && cssLibs.length > 0 && cssLibs.indexOf('lost-grid') != -1) { %>
/* ===================================================
LOST SETTINGS
=================================================== */
@lost flexbox flex;
@lost gutter 30px;

$max-width: 1440px;

body {
	lost-utility: edit;
}<% } %>