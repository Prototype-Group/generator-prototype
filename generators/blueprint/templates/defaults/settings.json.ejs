<%
    let bpWithJs = props.blueprints.indexOf('/scripts/bp.js.ejs') !== -1 || props.blueprints.indexOf('\\scripts\\bp.js.ejs') !== -1;
 %>
{
    "paths": {<% if(bpWithJs) {%>
        "scripts": "<%= path %>/<%= filename %>/scripts/<%= filename %>",<% } %>
        "styles": "<%= path %>/<%= filename %>/styles/<%= filename %>"
    },
    "scssFiles": [
        "<%= filename %>.scss"
    ],<% if(bpWithJs) {%>
    "jsFiles": [
        "<%= filename %>.js"
    ],<% } %>
    "type": "<%= customTypeName %>",
    "contextData": "<%= filename %>",
    "layout": "lyt-docs",
    "publish": true
}